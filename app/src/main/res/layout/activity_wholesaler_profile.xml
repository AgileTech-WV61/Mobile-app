<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WholesalerProfile"
    android:orientation="vertical">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/image_profile"
        android:clipToOutline="true"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="first Name"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerName"
            />

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerLastName"
            />

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="Birthday"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerBirthday"
            />

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerPhone"
            />

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="email"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerEmail"
            />

        <EditText
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:hint="address"
            android:textSize="12dp"
            android:layout_margin="20dp"
            android:id="@+id/txtWholesalerAddress"
            />

    </GridLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="aditional information"
        android:textSize="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/txtWholesalerAditional"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:paddingHorizontal="40dp"
        android:background="@drawable/btn_box"
        android:id="@+id/btnWholesalerSaveProfile"
        />

</LinearLayout>